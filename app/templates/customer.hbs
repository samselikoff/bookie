<h2>{{ firstName }} {{ lastName }}</h2>

<h3>Orders</h3>
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Category</th>
			<th>Status</th>
			<th>Price</th>
			<th>Cost</th>
		</tr>
	</thead>
	<tbody>
		{{#each orders}}
			<tr>
				<td>{{id}}</td>
				<td>{{category}}</td>
				<td>{{status}}</td>
				<td>{{price}}</td>
				<td>{{cost}}</td>
			</tr>
		{{/each}}
	</tbody>
</table>