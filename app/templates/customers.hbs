<div id="customers">

  <div class="row">
    <div class="col-sm-6">
      <h3>{{length}} Customers</h3>
    </div>
    <div class="col-sm-6">
      <h3>Outstanding</h3> 
    </div>
  </div>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        <tr {{action 'viewCustomer' this}}>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

</div>